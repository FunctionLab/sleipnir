package	"Orthologer"
version	"1.0"
purpose	"Orthology-based DAT processing"

option	"input"		i	"Orthology file"
						string	typestr="filename"
option	"weight1"	w	"Weight of in-cluster orthologue relationships"
						double	default="1"
option	"weight2"	W	"Weight of cross-cluster orthologue relationships"
						double	default="1"

section "Optional"
option	"memmap"	m	"Memory map input files when possible"
						flag	off
option	"verbosity"	v	"Message verbosity"
						int	default="5"
